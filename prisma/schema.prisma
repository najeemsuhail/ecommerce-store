generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  name           String?
  phone          String?
  address        Json?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  orders         Order[]
  reviews        Review[]
  wishlistGroups WishlistGroup[]
}

model Product {
  id              String           @id @default(cuid())
  name            String
  description     String
  price           Float
  comparePrice    Float?
  isDigital       Boolean          @default(false)
  stock           Int?
  sku             String?          @unique
  trackInventory  Boolean          @default(true)
  images          String[]
  videoUrl        String?
  category        String?
  tags            String[]
  brand           String?
  weight          Float?
  dimensions      Json?
  specifications  Json?
  slug            String           @unique
  metaTitle       String?
  metaDescription String?
  isActive        Boolean          @default(true)
  isFeatured      Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  orderItems      OrderItem[]
  variants        ProductVariant[]
  reviews         Review[]
}

model Order {
  id                    String      @id @default(cuid())
  userId                String?
  guestEmail            String?
  guestName             String?
  status                String      @default("pending")
  total                 Float
  shippingCost          Float       @default(0)
  shippingAddress       Json?
  paymentStatus         String      @default("pending")
  paymentId             String?
  trackingNumber        String?
  notes                 String?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  billingAddress        Json?
  billingSameAsShipping Boolean     @default(true)
  paymentMethod         String?
  user                  User?       @relation(fields: [userId], references: [id])
  items                 OrderItem[]
}

model ProductVariant {
  id         String      @id @default(cuid())
  productId  String
  name       String
  sku        String?     @unique
  price      Float
  stock      Int         @default(0)
  size       String?
  color      String?
  material   String?
  image      String?
  weight     Float?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model OrderItem {
  id        String          @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  variantId String?
  order     Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product         @relation(fields: [productId], references: [id])
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
}

model Review {
  id         String   @id @default(cuid())
  productId  String
  userId     String?
  rating     Int
  comment    String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user       User?    @relation(fields: [userId], references: [id])
}

model WishlistGroup {
  id        String         @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WishlistItem[]

  @@unique([userId, name])
  @@index([userId])
}

model WishlistItem {
  id        String        @id @default(cuid())
  groupId   String
  productId String
  createdAt DateTime      @default(now())
  group     WishlistGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, productId])
  @@index([groupId])
  @@index([productId])
}

model Blog {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  content       String
  excerpt       String?
  featuredImage String?
  author        String?
  published     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([published])
  @@index([createdAt])
}
